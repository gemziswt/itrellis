

<h1 style="text-align: center;color: #1c2f2f;font-size: 5em">My TODO List</h1>

<div id="todo_items_wrapper">

<% @items.each do |item| %>
<div class="row clearfix">
  <%if item.completed? %>
  <div class="complete">
    <%= link_to complete_item_path(item.id), method: :patch do %>
      <i style = "opacity:0.4;" class="fa fa-check"> </i>
    <%end%>
  </div>
  <div class="todo_item">
    <p style = "opacity:0.4;"><span style = "float: left;"><strike><%= link_to item.title, item_path(item)%></strike></span>
     <span style="float: right;"> <%=item.duedate.strftime("%B,%d,%Y") %></span>
   </p> 
  </div>
  
  <%else%>
    <div class="complete">
    <%= link_to  complete_item_path(item.id), method: :patch do %>
      <i class="fa fa-check"> </i>
    <%end%>
  </div>
  <div class="todo_item <%='overdue' if item.overdue? %>"  >
    <p><span style = "float: left;"><%= link_to item.title, item_path(item)%></span>
     <span style="float: right;"> <%=item.duedate.strftime("%B,%d,%Y") %></span>
   </p>
  </div>
  <%end%>
  <div class="trash">
    <%= link_to item, method: :delete, data: {confirm: "Are you sure?"} do %>
      <i class="fa fa-trash"></i>
    <%end%>
  </div>
</div>
<%end%>
<div class="links">
  <%= link_to 'New Item', new_item_path %>
</div>
</div>
